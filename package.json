{
  "private": true,
  "dependencies": {
    "eslint-config-amercier": "^0.3.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "devDependencies": {
    "eslint": "^5.13.0",
    "eslint-plugin-react-hooks": "^1.0.1",
    "next": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4"
  },
  "scripts": {
    "dev": "next",
    "build": "next build && next export -o dist",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier --ignore-path .gitignore '**/*.{html,json,md,s?css,ya?ml}' --list-different",
    "lint:eslint": "eslint --ext js,jsx --ignore-path .gitignore ."
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "plugins": [
      "react-hooks"
    ],
    "extends": [
      "airbnb",
      "amercier/lib/more",
      "plugin:unicorn/recommended",
      "jsdoc-strict",
      "plugin:prettier/recommended",
      "prettier/react"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "unicorn/filename-case": [
        "error",
        {
          "case": "kebabCase"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "components/**/!(index).jsx"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      },
      {
        "files": [
          "components/**/*.{spec,test}.jsx"
        ],
        "rules": {
          "unicorn/filename-case": "off"
        }
      },
      {
        "files": [
          "**/*.js"
        ],
        "rules": {
          "import/prefer-default-export": "off",
          "import/no-default-export": "error"
        }
      }
    ]
  }
}
